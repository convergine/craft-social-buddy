{
    "name": "convergine/craft-social-buddy",
    "description": "Social Buddy is a CraftCMS plugin for seamless social media publishing. Share entries to Facebook, Instagram, Pinterest, Telegram, Medium, LinkedIn, and X (Twitter), with options for both automatic and manual posting. Supports multi-platform publishing, customizable content, and cron job automation.",
    "type": "craft-plugin",
    "version": "1.0.2",
    "keywords": [
        "craftcms",
        "social-buddy",
        "social-media",
        "automation",
        "Facebook",
        "Instagram",
        "Pinterest",
        "Telegram",
        "Medium",
        "LinkedIn",
        "X-Twitter"
    ],
    "support": {
        "issues": "https://github.com/convergine/craft-social-buddy/issues?state=open",
        "source": "https://github.com/convergine/craft-social-buddy",
        "docs": "https://github.com/convergine/craft-social-buddy/blob/master/README.md",
        "support": {
            "email": "info@convergine.com"
        }
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Convergine Corp.",
            "homepage": "https://www.convergine.com"
        }
    ],
    "require": {
        "craftcms/cms": "^4.0.0 || ^5.0.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
          "convergine\\socialbuddy\\": "src/"
        }
    },
    "extra": {
        "name": "Social Buddy",
        "handle": "convergine-socialbuddy",
        "hasCpSettings": true,
        "hasCpSection": true,
        "changelogUrl": "https://github.com/convergine/craft-social-buddy/blob/master/CHANGELOG.md",
        "class": "convergine\\socialbuddy\\SocialBuddyPlugin",
        "bootstrap": "convergine\\socialbuddy\\ElementStatusEvents"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
